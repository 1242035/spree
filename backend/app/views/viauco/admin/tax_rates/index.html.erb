<% content_for :page_title do %>
  <%= plural_resource_name(Viauco::TaxRate) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Viauco.t(:new_tax_rate), new_object_url, class: "btn-success", icon: 'add' %>
<% end if can? :create, Viauco::TaxRate %>

<% if @tax_rates.any? %>
  <table class="table">
    <thead>
      <tr data-hook="rate_header">
        <th><%= Viauco.t(:zone) %></th>
        <th><%= Viauco.t(:name) %></th>
        <th><%= Viauco.t(:tax_category) %></th>
        <th><%= Viauco.t(:amount) %></th>
        <th><%= Viauco.t(:included_in_price) %></th>
        <th><%= Viauco.t(:show_rate_in_label) %></th>
        <th><%= Viauco.t(:calculator) %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tax_rates.each do |tax_rate|%>
      <tr id="<%= viauco_dom_id tax_rate %>" data-hook="rate_row">
        <td><%=tax_rate.zone.try(:name) || Viauco.t(:not_available) %></td>
        <td><%=tax_rate.name %></td>
        <td><%=tax_rate.tax_category.try(:name) || Viauco.t(:not_available) %></td>
        <td><%=tax_rate.amount %></td>
        <td><%=tax_rate.included_in_price? ? Viauco.t(:say_yes) : Viauco.t(:say_no) %></td>
        <td><%=tax_rate.show_rate_in_label? ? Viauco.t(:say_yes) : Viauco.t(:say_no) %></td>
        <td><%=tax_rate.calculator.to_s %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit(tax_rate, no_text: true) if can? :edit, tax_rate %>
          <%= link_to_delete(tax_rate, no_text: true) if can? :delete, tax_rate %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Viauco.t(:no_resource_found, resource: plural_resource_name(Viauco::TaxRate)) %>,
    <%= link_to(Viauco.t(:add_one), new_object_url) if can? :create, Viauco::TaxRate %>!
  </div>
<% end %>
