<fieldset id="risk_analysis">
  <legend><%= "#{Viauco.t(:risk_analysis)}: #{Viauco.t(:not) unless @order.is_risky?} #{Viauco.t(:risky)}" %></legend>
  <table class="table table-condensed table-bordered">
    <thead>
      <th><%= Viauco.t('risk')%></th>
      <th><%= Viauco.t('status')%></th>
    </thead>
    <tbody id="risk-analysis" data-hook="order_details_adjustments"  class="with-border">
      <tr class="">
        <td>
          <strong><%= Viauco.t(:failed_payment_attempts) %>:</strong>
        </td>
        <td>
          <span class="badge badge-<%= @order.payments.failed.size > 0 ? 'void' : 'complete' %>">
            <%= link_to "#{Viauco.t 'payments_count', count: @order.payments.failed.size, default: pluralize(@order.payments.failed.size, Viauco.t(:payment))}", viauco.admin_order_payments_path(@order) %>
          </span>
        </td>
      </tr>

      <tr>
        <td><strong><%= Viauco.t(:avs_response) %>:</strong></td>
        <td>
          <span class="badge badge-<%= latest_payment.is_avs_risky? ? 'void' : 'complete' %>">
            <% if latest_payment.is_avs_risky? %>
              <%= "#{Viauco.t(:error)}: #{avs_response_code[latest_payment.avs_response]}" %>
            <% else %>
              <%= Viauco.t(:success) %>
            <% end %>
          </span>
        </td>
      </tr>

      <tr>
        <td><strong><%= Viauco.t(:cvv_response) %>:</strong></td>
        <td>
          <span class="badge badge-<%= latest_payment.is_cvv_risky? ? 'void' : 'complete' %>">
            <% if latest_payment.is_cvv_risky? %>
              <%= "#{Viauco.t(:error)}: #{cvv_response_code[latest_payment.cvv_response_code]}" %>
            <% else %>
              <%= Viauco.t(:success) %>
            <% end %>
          </span>
        </td>
      </tr>
    </tbody>
  </table>
</fieldset>
