<%= render 'viauco/admin/shared/order_tabs', current: :customer_details %>

<% content_for :page_title do %>
  / <%= Viauco.t(:customer_details) %>
<% end %>

<% if can? :edit, @order.user %>
  <div id="select-customer" class="card mb-3" data-hook>
    <div class="card-header">
      <h1 class="card-title mb-0 h5">
        <%= Viauco.t(:customer_search) %>
      </h1>
    </div>
    <div class="card-body">
      <%= hidden_field_tag :customer_search,  nil, class: 'error-message' %>
      <%= render partial: "viauco/admin/orders/customer_details/autocomplete", formats: :js %>
    </div>
  </div>
<% end %>

<%= render 'viauco/admin/shared/error_messages', target: @order %>

<%= form_for @order, url: viauco.admin_order_customer_url(@order) do |f| %>
  <%= render 'form', f: f %>
<% end %>

<br>

<%= render 'viauco/admin/shared/order_summary' %>
