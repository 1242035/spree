<% content_for :page_title do %>
  <%= plural_resource_name(Viauco::Order) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Viauco.t(:new_order),
    new_admin_order_url,
    class: "btn-success",
      icon: 'add',
      id: 'admin_new_order' %>
<% end if can? :create, Viauco::Order %>

<% content_for :table_filter do %>
  <div data-hook="admin_orders_index_search">

    <%= search_form_for [:admin, @search] do |f| %>
      <div class="row">
        <div class="date-range-filter col-12 col-lg-8">
          <div class="form-group">
            <%= label_tag :q_created_at_gt, Viauco.t(:date_range) %>
            <div class="row pb-0">
              <div class="col-12 col-lg-6">
                <div class="input-group">
                  <%= f.text_field :created_at_gt,
                    class: 'datepicker datepicker-from form-control js-filterable',
                      value: params[:q][:created_at_gt],
                      placeholder: Viauco.t(:start) %>
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="icon icon-calendar"></i>
                    </span>
                  </div>
                </div>

              </div>
              <div class="col-12 col-lg-6">
                <div class="input-group">
                  <%= f.text_field :created_at_lt,
                    class: 'datepicker datepicker-to form-control js-filterable',
                      value: params[:q][:created_at_lt],
                      placeholder: Viauco.t(:stop) %>
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="icon icon-calendar"></i>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_number_cont, Viauco.t(:order_number, number: '') %>
            <%= f.text_field :number_cont, class: 'form-control js-quick-search-target js-filterable' %>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_state_eq, Viauco.t(:status) %>
            <%= f.select :state_eq,
              Viauco::Order.state_machines[:state].states.map {|s| [Viauco.t("order_state.#{s.name}"), s.value]},
              { include_blank: true },
              class: 'select2 js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_payment_state_eq, Viauco.t(:payment_state) %>
            <%= f.select :payment_state_eq, Viauco::Order::PAYMENT_STATES.map {|s| [Viauco.t("payment_states.#{s}"), s]}, { include_blank: true }, class: 'select2 js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_shipment_state_eq, Viauco.t(:shipment_state) %>
            <%= f.select :shipment_state_eq, Viauco::Order::SHIPMENT_STATES.map {|s| [Viauco.t("shipment_states.#{s}"), s]}, { include_blank: true }, class: 'select2 js-filterable' %>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_bill_address_firstname_start, Viauco.t(:first_name_begins_with) %>
            <%= f.text_field :bill_address_firstname_start, class: 'form-control js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_bill_address_lastname_start, Viauco.t(:last_name_begins_with) %>
            <%= f.text_field :bill_address_lastname_start, class: 'form-control js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_email_cont, Viauco.t(:email) %>
            <%= f.text_field :email_cont, class: 'form-control js-filterable' %>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_line_items_variant_sku_eq, Viauco.t(:sku) %>
            <%= f.text_field :line_items_variant_sku_eq, class: 'form-control js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_promotions_id_in, Viauco.t(:promotion) %>
            <%= f.select :promotions_id_in, Viauco::Promotion.applied.pluck(:name, :id), { include_blank: true }, class: 'select2 js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_store_id_in, Viauco.t(:store) %>
            <%= f.select :store_id_in, Viauco::Store.order(:name).pluck(:name, :id), { include_blank: true }, class: 'select2 js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="form-group">
            <%= label_tag :q_channel_eq, Viauco.t(:channel) %>
            <%= f.select :channel_eq, Viauco::Order.distinct.pluck(:channel), { include_blank: true }, class: 'select2 js-filterable' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">

          <div class="form-group">

            <div class="checkbox mt-2">
              <%= label_tag 'q_completed_at_not_null' do %>
                <%= f.check_box :completed_at_not_null, {checked: @show_only_completed}, '1', '0' %>
                <%= Viauco.t(:show_only_complete_orders) %>
              <% end %>
            </div>

            <div class="checkbox mt-2">
              <%= label_tag 'q_considered_risky_eq' do %>
                <%= f.check_box :considered_risky_eq, {checked: (params[:q][:considered_risky_eq] == '1')}, '1', '' %>
                <%= Viauco.t(:show_only_considered_risky) %>
              <% end %>
            </div>

          </div>

        </div>

      </div>

      <div data-hook="admin_orders_index_search_buttons" class="form-actions">
        <%= button Viauco.t(:filter_results), 'search' %>
      </div>

    <% end %>

  </div>

<% end %>

<%= render 'viauco/admin/shared/index_table_options', collection: @orders %>

<% if @orders.any? %>
  <table class="table" id="listing_orders" data-hook>
    <thead>
      <tr data-hook="admin_orders_index_headers">
        <% if @show_only_completed %>
          <th><%= sort_link @search, :completed_at,   I18n.t(:completed_at, scope: 'activerecord.attributes.viauco/order') %></th>
        <% else %>
          <th><%= sort_link @search, :created_at,     I18n.t(:created_at, scope: 'activerecord.attributes.viauco/order') %></th>
        <% end %>
        <th><%= sort_link @search, :number,           I18n.t(:number, scope: 'activerecord.attributes.viauco/order') %></th>
        <th><%= sort_link @search, :considered_risky, I18n.t(:considered_risky, scope: 'activerecord.attributes.viauco/order') %></th>
        <th><%= sort_link @search, :state,            I18n.t(:state, scope: 'activerecord.attributes.viauco/order') %></th>
        <th><%= sort_link @search, :payment_state,    I18n.t(:payment_state, scope: 'activerecord.attributes.viauco/order') %></th>
         <% if Viauco::Order.checkout_step_names.include?(:delivery) %>
          <th><%= sort_link @search, :shipment_state, I18n.t(:shipment_state, scope: 'activerecord.attributes.viauco/order') %></th>
         <% end %>
        <th><%= sort_link @search, :email,            I18n.t(:email, scope: 'activerecord.attributes.viauco/order') %></th>
        <th><%= sort_link @search, :total,            I18n.t(:total, scope: 'activerecord.attributes.viauco/order') %></th>
        <th data-hook="admin_orders_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr data-hook="admin_orders_index_rows" class="state-<%= order.state.downcase %> <%= cycle('odd', 'even') %>">
        <td>
          <%= order_time(@show_only_completed ? order.completed_at : order.created_at) %>
        </td>
        <td><%= link_to order.number, edit_admin_order_path(order) %></td>
        <td>
          <span class="badge badge-<%= order.considered_risky ? 'considered_risky' : 'considered_safe' %>">
            <%= order.considered_risky ? Viauco.t("risky") : Viauco.t("safe") %>
          </span>
        </td>
        <td>
          <span class="badge badge-<%= order.state.downcase %>"><%= Viauco.t("order_state.#{order.state.downcase}") %></span>
          <span class="icon icon-filter filterable js-add-filter" data-ransack-field="q_state_eq" data-ransack-value="<%= order.state %>"></span>
        </td>
        <td>
          <% if order.payment_state %>

            <%= link_to Viauco.t("payment_states.#{order.payment_state}"),
              admin_order_payments_path(order),
              class: "badge badge-#{order.payment_state}" %>

            <span class="icon icon-filter filterable js-add-filter"
              data-ransack-field="q_payment_state_eq"
              data-ransack-value="<%= order.payment_state %>"></span>
          <% end %>
        </td>
        <% if Viauco::Order.checkout_step_names.include?(:delivery) %>
          <td>
            <% if order.shipment_state %>
              <span class="badge badge-<%= order.shipment_state %>"><%= Viauco.t("shipment_states.#{order.shipment_state}") %></span>
              <span class="icon icon-filter filterable js-add-filter" data-ransack-field="q_shipment_state_eq" data-ransack-value="<%= order.shipment_state %>"></span>
            <% end %>
          </td>
        <% end %>
        <td>
          <% if order.user %>
            <%= link_to order.email, edit_admin_user_path(order.user) %>
          <% else %>
            <%= mail_to order.email %>
          <% end %>
          <% if order.user || order.email %>
            <span class="icon icon-filter filterable js-add-filter" data-ransack-field="q_email_cont" data-ransack-value="<%= order.email %>"></span>
          <% end %>
        </td>
        <td><%= order.display_total.to_html %></td>
        <td class='actions actions-1' data-hook="admin_orders_index_row_actions">
          <%= link_to_edit_url edit_admin_order_path(order), title: "admin_edit_#{dom_id(order)}", no_text: true if can?(:edit, order) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Viauco.t(:no_resource_found, resource: plural_resource_name(Viauco::Order)) %>,
    <%= link_to(Viauco.t(:add_one), new_admin_order_url) if can? :create, Viauco::Order %>!
  </div>
<% end %>

<%= render 'viauco/admin/shared/index_table_options', collection: @orders, simple: true %>
