<% content_for :page_title do %>
  <%= link_to Viauco.t(:roles), viauco.admin_roles_url %> /
  <%= @role.name.capitalize %>
<% end %>

<%= render partial: 'viauco/admin/shared/error_messages', locals: { target: @role } %>

<%= form_for [:admin, @role] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'viauco/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
