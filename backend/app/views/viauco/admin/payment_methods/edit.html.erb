<% content_for :page_title do %>
  <%= link_to Viauco.t(:payment_methods), viauco.admin_payment_methods_url %> /
  <%= @payment_method.name %>
<% end %>

<%= render partial: 'viauco/admin/shared/error_messages', locals: { target: @payment_method } %>

<%= form_for @payment_method, url: admin_payment_method_path(@payment_method) do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'viauco/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
