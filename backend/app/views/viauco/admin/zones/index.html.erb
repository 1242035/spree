<% content_for :page_title do %>
  <%= Viauco.t(:zones) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Viauco.t(:new_zone), new_object_url, class: "btn-success", icon: 'add', id: 'admin_new_zone_link' %>
<% end if can? :create, Viauco::Zone %>

<%= paginate @zones, theme: 'twitter-bootstrap-4' %>

<% if @zones.any? %>
  <table class="table" id='listing_zones' data-hook>
    <thead>
      <tr data-hook="zones_header">
        <th><%= sort_link @search,:name, Viauco.t(:name), title: 'zones_order_by_name_title' %></th>
        <th>
          <%= sort_link @search,:description, Viauco.t(:description), {}, {title: 'zones_order_by_description_title'} %>
        </th>
        <th><%= Viauco.t(:default_tax_zone) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @zones.each do |zone| %>
        <tr id="<%= viauco_dom_id zone %>" data-hook="zones_row">
          <td><%= zone.name %></td>
          <td><%= zone.description %></td>
          <td><%= zone.default_tax? ? Viauco.t(:say_yes) : Viauco.t(:say_no) %></td>
          <td class="actions actions-2 text-right">
            <%= link_to_edit(zone, no_text: true) if can? :edit, zone %>
            <%= link_to_delete(zone, no_text: true) if can? :delete, zone %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Viauco.t(:no_resource_found, resource: plural_resource_name(Viauco::Zone)) %>,
    <%= link_to(Viauco.t(:add_one), new_object_url) if can? :create, Viauco::Zone %>!
  </div>
<% end %>

<%= paginate @zones, theme: 'twitter-bootstrap-4' %>
