<% content_for :page_title do %>
  <%= link_to Viauco.t(:products), admin_products_path %> /
  <%= @product.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav flex-column nav-pills" data-hook="admin_product_tabs">
    <%= content_tag :li do %>
      <%= link_to_with_icon 'edit',
        Viauco.t(:details),
        edit_admin_product_url(@product),
        class: "nav-link #{'active' if current == :details}" %>

    <% end if can?(:admin, Viauco::Product) %>

    <%= content_tag :li do %>
      <%= link_to_with_icon 'picture',
        Viauco.t(:images),
        viauco.admin_product_images_url(@product),
        class: "nav-link #{'active' if current == :images}" %>

    <% end if can?(:admin, Viauco::Image) && !@product.deleted? %>

    <%= content_tag :li do %>
      <%= link_to_with_icon 'th-large',
        Viauco.t(:variants),
        viauco.admin_product_variants_url(@product),
        class: "nav-link #{'active' if current == :variants}" %>

    <% end if can?(:admin, Viauco::Variant) && !@product.deleted? %>

    <%= content_tag :li do %>
      <%= link_to_with_icon 'list-alt',
        Viauco.t(:properties),
        viauco.admin_product_product_properties_url(@product),
        class: "nav-link #{'active' if current == :properties}" %>

    <% end if can?(:admin, Viauco::ProductProperty) && !@product.deleted? %>

    <%= content_tag :li do %>
      <%= link_to_with_icon 'home',
        Viauco.t(:stock),
        stock_admin_product_url(@product),
        class: "nav-link #{'active' if current == :stock}" %>

    <% end if can?(:admin, Viauco::StockItem) && !@product.deleted? %>
  </ul>
<% end %>
