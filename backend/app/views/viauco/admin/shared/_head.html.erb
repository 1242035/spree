<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= csrf_meta_tags %>

<title>
  <% if content_for? :title %>
    <%= yield :title %>
  <% else %>
    <%= "Viauco #{Viauco.t('administration')}: " %>
    <%= Viauco.t(controller.controller_name, default: controller.controller_name.titleize) %>
  <% end %>
</title>

<%= stylesheet_link_tag 'viauco/backend/all', media: :all %>

<%= render 'viauco/shared/paths' %>
<%= javascript_include_tag 'viauco/backend/all' %>
<%= render "viauco/admin/shared/translations" %>

<%= javascript_tag do %>
  <%== "var AUTH_TOKEN = #{form_authenticity_token.inspect};" %>
  <%== "Viauco.api_key = '#{try_viauco_current_user.viauco_api_key}';" if try_viauco_current_user %>
<% end %>

<%= yield :head %>
