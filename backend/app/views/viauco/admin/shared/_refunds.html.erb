<table class="table table-condensed table-bordered" id='refunds' data-order-id='<%= @order.number %>'>
  <thead>
    <tr data-hook="refunds_header">
      <th><%= "#{Viauco.t('date')}/#{Viauco.t('time')}" %></th>
      <th><%= Viauco.t(:payment_identifier) %></th>
      <th><%= Viauco.t(:amount) %></th>
      <th><%= Viauco.t(:payment_method) %></th>
      <th><%= Viauco.t(:transaction_id) %></th>
      <th><%= Viauco.t(:reason) %></th>
      <% if show_actions %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% refunds.each do |refund| %>
      <tr id="<%= dom_id(refund) %>" data-hook="refunds_row" class="<%= cycle('odd', 'even', name: 'refund_table_cycle')%>">
        <td><%= pretty_time(refund.created_at) %></td>
        <td><%= refund.payment.number %></td>
        <td class="amount"><%= refund.display_amount %></td>
        <td><%= payment_method_name(refund.payment) %></td>
        <td><%= refund.transaction_id %></td>
        <td><%= truncate(refund.reason.name, length: 100) %></td>
        <% if show_actions %>
          <td class="actions actions-1">
            <%= link_to_with_icon('edit', Viauco.t(:edit), edit_admin_order_payment_refund_path(refund.payment.order, refund.payment, refund), no_text: true, class: "btn btn-outline-secondary btn-sm") if can?(:edit, refund) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
