<% if try_viauco_current_user %>
  <ul class="nav navbar-nav align-items-end h-100 justify-content-center">
    <li class="dropdown user user-menu h-100">
      <div class="dropdown d-flex align-items-center h-100">
        <button class="dropdown-toggle btn btn-link text-white h-100" data-toggle="dropdown">
          <i class="glyphicon glyphicon-user"></i>
          <span>
            <%= try_viauco_current_user.email %> <i class="caret"></i>
          </span>
        </button>

        <ul class="dropdown-menu position-absolute mt-0 rounded-0 border-top-0">
          <% if viauco.respond_to? :root_path %>
            <li class="dropdown-item p-0">
              <%= link_to viauco.root_path, target: :blank, class: 'd-block text-dark py-2 px-4' do %>
                <i class="glyphicon glyphicon-new-window"></i>
                &nbsp;
                <%= Viauco.t(:back_to_store) %>
              <% end %>
            </li>
          <% end %>

          <% if can?(:manage, try_viauco_current_user) %>
            <li class="dropdown-item p-0">
              <%= link_to viauco.edit_admin_user_path(try_viauco_current_user), class: 'd-block text-dark py-2 px-4' do %>
                <i class="glyphicon glyphicon-user"></i>
                &nbsp;
                <%= Viauco.t(:account) %>
              <% end %>
            </li>
          <% end %>

          <% if viauco.respond_to? :admin_logout_path %>
            <li class="dropdown-item p-0">
              <%= link_to viauco.admin_logout_path, class: 'd-block text-dark py-2 px-4' do %>
                <i class="glyphicon glyphicon-log-out"></i>
                &nbsp;
                <%= Viauco.t(:logout) %>
              <% end %>
            </li>
          <% end %>

          <div class="dropdown-divider"></div>

          <li class="dropdown-item p-0">
            <%= link_to 'http://guides.viaucocommerce.org', target: :blank, class: 'd-block text-dark py-2 px-4' do %>
              <i class="glyphicon glyphicon-info-sign"></i>
              &nbsp;
              <%= Viauco.t(:help_center) %>
            <% end %>
          </li>

          <li class="dropdown-item p-0">
            <%= link_to 'http://slack.viaucocommerce.org', target: :blank, class: 'd-block text-dark py-2 px-4' do %>
              <i class="glyphicon glyphicon-comment"></i>
              &nbsp;
              <%= Viauco.t(:join_slack) %>
            <% end %>
          </li>

          <li class="dropdown-item p-0">
            <%= link_to 'https://github.com/viauco-contrib', target: :blank, class: 'd-block text-dark py-2 px-4' do %>
              <i class="glyphicon glyphicon-download"></i>
              &nbsp;
              <%= Viauco.t(:extensions_directory) %>
            <% end %>
          </li>
        </ul>
      </div>

    </li>
  </ul>
<% end %>
