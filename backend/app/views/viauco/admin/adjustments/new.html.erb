<%= render partial: 'viauco/admin/shared/order_tabs', locals: { current: :adjustments } %>

<% content_for :page_title do %>
  / <%= Viauco.t(:new_adjustment) %>
<% end %>

<%= render partial: 'viauco/admin/shared/error_messages', locals: { target: @adjustment } %>

<%= form_for @adjustment, url: admin_order_adjustments_path do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Viauco.t(:continue), 'save' %>
      <span class="or"><%= Viauco.t(:or) %></span>
      <%= button_link_to Viauco.t('actions.cancel'), viauco.admin_order_adjustments_url(@order), icon: 'delete' %>
    </div>
  </fieldset>
<% end %>
