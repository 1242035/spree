<div class="card-header">
  <h3 class="card-title mb-0 h5"><%= Viauco.t(:order_adjustments) %></h3>
</div>

<table class="table table-bordered adjustments" data-hook="adjustments">
  <thead data-hook="adjustmment_head">
    <tr>
      <th><%= Viauco.t(:adjustable) %></th>
      <th><%= Viauco.t(:description) %></th>
      <th class="text-center"><%= Viauco.t(:amount) %></th>
      <th class="text-center"><%= Viauco.t(:status) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "adjustment", collection: @adjustments %>
  </tbody>
</table>

<% if can?(:edit, Viauco::Adjustment) %>
  <div class="card-footer">
    <div class="row text-center pb-0">
      <div class="col-12 col-lg-6">
        <%= button_to Viauco.t(:open_all_adjustments), open_adjustments_admin_order_path(@order), method: :get, class: "btn btn-success" %>
      </div>
      <div class="col-12 col-lg-6">
        <%= button_to Viauco.t(:close_all_adjustments), close_adjustments_admin_order_path(@order), method: :get, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>
