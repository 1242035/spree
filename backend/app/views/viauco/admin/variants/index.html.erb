<%= render partial: 'viauco/admin/shared/product_tabs', locals: {current: :variants} %>

<%# Place for new variant form %>
<div id="new_variant" data-hook></div>

<% if @variants.any? %>
  <table class="table sortable" data-sortable-link="<%= update_positions_admin_product_variants_path(@product) %>">
    <thead data-hook="variants_header">
      <tr>
        <th colspan="2"><%= Viauco.t(:options) %></th>
        <th><%= Viauco.t(:price) %></th>
        <th><%= Viauco.t(:sku) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @variants.each do |variant| %>
      <tr id="<%= viauco_dom_id variant %>" <%= 'style="color:red;"' if variant.deleted? %> data-hook="variants_row">
        <td class="move-handle">
          <% if can? :edit, variant %>
            <span class="icon icon-move handle"></span>
          <% end %>
        </td>
        <td><%= variant.options_text %></td>
        <td><%= variant.display_price.to_html %></td>
        <td><%= variant.sku %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit(variant, no_text: true) if can?(:edit, variant) && !variant.deleted? %>
          <%= link_to_delete(variant, no_text: true) if can?(:destroy, variant) && !variant.deleted? %>
        </td>
      </tr>
      <% end %>
      <% unless @product.has_variants? %>
        <tr>
          <td colspan="5"><%= Viauco.t(:none) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found alert alert-info">
    <%= Viauco.t(:no_resource_found, resource: plural_resource_name(Viauco::Variant)) %>
    <% if can?(:create, Viauco::Variant) && !@product.empty_option_values? %>
      - <%= link_to(Viauco.t(:add_one), viauco.new_admin_product_variant_path(@product)) %>!
    <% end %>
  </div>
<% end %>

<% if @product.empty_option_values? %>
  <% if can?(:modify, Viauco::ProductOptionType) %>
    <p class='first_add_option_types no-objects-found' data-hook="first_add_option_types">
      <%= Viauco.t(:to_add_variants_you_must_first_define) %>
      <%= link_to(Viauco.t(:option_types), viauco.admin_product_url(@product)) %>
      <% if can?(:read, Viauco::OptionType) && can?([:create, :read], Viauco::OptionValue) %>
        <%= Viauco.t(:and) %>
        <%= link_to Viauco.t(:option_values), viauco.admin_option_types_url %>
      <% end %>
    </p>
  <% end %>
<% else %>
  <% content_for :page_actions do %>
    <%= button_link_to(Viauco.t(:new_variant), viauco.new_admin_product_variant_url(@product), { remote: :true, icon: 'add', :'data-update' => 'new_variant', class: 'btn-success', id: 'new_var_link' }) if can? :create, Viauco::Variant %>
    <%= button_link_to (@deleted.blank? ? Viauco.t(:show_deleted) : Viauco.t(:show_active)), viauco.admin_product_variants_url(@product, deleted: @deleted.blank? ? "on" : "off"), { class: 'btn-outline-secondary', icon: 'filter' } %>
  <% end %>
<% end %>
