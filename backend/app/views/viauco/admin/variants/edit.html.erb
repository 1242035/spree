<%= render partial: 'viauco/admin/shared/product_tabs', locals: { current: :variants } %>

<%= render partial: 'viauco/admin/shared/error_messages', locals: { target: @variant } %>

<%= form_for [:admin, @product, @variant] do |f| %>
  <fieldset>
    <div data-hook="admin_variant_edit_form">
      <%= render partial: 'form', locals: { f: f } %>
    </div>

    <%= render partial: 'viauco/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
