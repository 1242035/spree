<% content_for :page_title do %>
  <%= link_to Viauco.t(:reports), viauco.admin_reports_url %> /
  <%= Viauco.t(:sales_totals) %>
<% end %>

<div class="card bg-light mb-3">
  <div class="card-body">
    <%= render partial: 'viauco/admin/shared/report_order_criteria' %>
  </div>
</div>

<table class="table table-bordered admin-report" data-hook="sales_total">
  <thead>
    <tr>
      <th><%= Viauco.t(:currency) %></th>
      <th><%= Viauco.t(:item_total) %></th>
      <th><%= Viauco.t(:adjustment_total) %></th>
      <th><%= Viauco.t(:sales_total) %></th>
    </tr>
  </thead>
  <tbody>
    <% @totals.each do |key, row| %>
      <tr>
        <td><%= key %></td>
        <td><%= Viauco::Money.new(row[:item_total], { currency: key }) %></td>
        <td><%= Viauco::Money.new(row[:adjustment_total], { currency: key }) %></td>
        <td><%= Viauco::Money.new(row[:sales_total], { currency: key }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
