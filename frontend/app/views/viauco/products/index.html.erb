<% if "viauco/products" == params[:controller] && @taxon || @taxonomies.present? %>
  <% content_for :sidebar do %>
    <div data-hook="homepage_sidebar_navigation">
      <% if "viauco/products" == params[:controller] && @taxon %>
        <%= render partial: 'viauco/shared/filters' %>
      <% else %>
        <%= render partial: 'viauco/shared/taxonomies' %>
      <% end %>
    </div>
  <% end %>
<% end %>

<% if params[:keywords] %>
  <div data-hook="search_results">
    <% if @products.empty? %>
      <h6 class="search-results-title"><%= Viauco.t(:no_products_found) %></h6>
    <% else %>
      <%= render partial: 'viauco/shared/products', locals: { products: @products, taxon: @taxon } %>
    <% end %>
  </div>
<% else %>
  <div data-hook="homepage_products">
    <% cache(cache_key_for_products) do %>
      <%= render partial: 'viauco/shared/products', locals: { products: @products, taxon: @taxon } %>
    <% end %>
  </div>
<% end %>
