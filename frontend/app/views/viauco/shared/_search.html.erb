<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Viauco::Taxon.roots %>
<%= form_tag viauco.products_path, method: :get,
  class: "ml-2 form-inline" do %>

  <% cache [I18n.locale, @taxons] do %>
    <%= select_tag :taxon,
      options_for_select(
        [[Viauco.t(:all_departments), '']] +
        @taxons.map {|t| [t.name, t.id]},
        @taxon ? @taxon.id : params[:taxon]
      ),
      aria: { label: 'Taxon' },
      class: "form-control mr-2 mb-2 mb-md-0" %>
  <% end %>

  <%= search_field_tag :keywords,
    params[:keywords],
    placeholder: Viauco.t(:search),
    class: "form-control mr-2 mb-2 mb-md-0" %>

  <%= submit_tag Viauco.t(:search), name: nil, class: "btn btn-success" %>
<% end %>
