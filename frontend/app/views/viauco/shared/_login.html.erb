<%= form_for Viauco::User.new, as: :viauco_user, url: viauco.create_new_session_path do |f| %>
  <fieldset id="password-credentials">
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', tabindex: 1, placeholder: Viauco.t(:email) %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', tabindex: 2, placeholder: Viauco.t(:password) %>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, Viauco.t(:remember_me) %>
      </label>
    </div>
    <div class="form-group">
      <%= f.submit Viauco.t(:login), class: 'btn btn-lg btn-success btn-block', tabindex: 3 %>
    </div>
  </fieldset>
<% end %>