<fieldset id="order_summary" data-hook>
  <h1><%= accurate_title %></h1>

  <% if order_just_completed?(@order) %>
    <p><strong><%= Viauco.t(:thank_you_for_your_order) %></strong></p>
  <% end %>

  <div id="order" data-hook>
    <%= render partial: 'viauco/shared/order_details', locals: { order: @order } %>

    <br class="clear" />

    <p data-hook="links">
      <%= link_to Viauco.t(:back_to_store), viauco.root_path, class: "button" %>
      <% unless order_just_completed?(@order) %>
        <% if try_viauco_current_user && respond_to?(:account_path) %>
          <%= link_to Viauco.t(:my_account), account_path, class: "button" %>
        <% end %>
      <% end %>
    </p>
  </div>
</fieldset>
