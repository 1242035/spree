<table class="row header">
  <tr>
    <td>
      <p class="lede">
        <%= Viauco.t('reimbursement_mailer.reimbursement_email.dear_customer') %>
      </p>
      <p>
        <%= Viauco.t('reimbursement_mailer.reimbursement_email.instructions') %>
      </p>
      <p>
        <%= Viauco.t('reimbursement_mailer.reimbursement_email.refund_summary') %>
      </p>
      <p>
        <%= Viauco.t('reimbursement_mailer.reimbursement_email.total_refunded', total: @reimbursement.display_total) %>
      </p>

      <% if @reimbursement.return_items.exchange_requested.present? %>
        
        <p>
        <%= Viauco.t('reimbursement_mailer.reimbursement_email.exchange_summary') %>
        </p>

        <table class="container">
          <tr>
            <td class="wrapper last">
              <table class="twelve columns">

                <% @reimbursement.return_items.exchange_requested.each do |return_item| %>
                  <tr>
                    <td class="six sub-columns">
                      <%= return_item.variant.sku %>
                    </td>
                    <td>
                      <%= link_to raw(return_item.variant.product.name),
                                  viauco.product_url(return_item.variant.product) %>
                    </td>
                    <td>
                      <%= "(#{raw(return_item.exchange_variant.options_text)})" if return_item.exchange_variant.options_text.present? -%>
                    </td>
                  </tr>
                <% end %>

              </table>
            </td>
          </tr>
        </table>


        <% if @reimbursement.return_items.awaiting_return.present? && Viauco::Config[:expedited_exchanges] %>
          <p>
          <%= Viauco.t('reimbursement_mailer.reimbursement_email.days_to_send', days: Viauco::Config[:expedited_exchanges_days_window]) %>
          </p>
        <% end %>

      <% end %>
      <p>
        <%= Viauco.t('reimbursement_mailer.reimbursement_email.thanks') %>
      </p>
    <td class="expander"></td>
  </tr>
</table>
